<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_header_height"
        android:background="@color/header_bg"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/title"
            android:textSize="@dimen/settings_header_tv_header_textsize" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/devider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="vertical">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@null"

                android:paddingTop="5dip"
                android:textColor="#5b5f62"
                android:textColorHighlight="#cdddec"
                android:textColorHint="#d2d2d2"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

    <ListView
        android:layout_width="0dip"
        android:layout_height="0dip"></ListView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t_ll_bottom_height"
        android:background="@drawable/bottom_feature_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip">

        <Button
            android:id="@+id/btn_gen"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/tape_margin"
            android:layout_height="match_parent"
            android:text="@string/generate"
            android:background="@drawable/button_" />
        <Button
            android:id="@+id/btn_read"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/tape_margin"
            android:layout_height="match_parent"
            android:text="@string/read"
            android:background="@drawable/button_" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_taping"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/bottom_feature_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:visibility="gone" />

</LinearLayout>